package project4;

public class LinkedList {
	private Node top;
	private Node current;

	public LinkedList() {
		this.top = null;
		this.current = top;
	}

	public void insertBeforeCurrent(String data) {
		Node temp = new Node(data, null, null);

		// no list
		if (top == null) {
			top = temp;
		}

		else if (current == top) {
			current.setPrev(temp);
			temp.setNext(current);
			top = temp;
		}

		else {
			current.setPrev(temp);
			temp.setNext(current);
		}
		current = temp;
	}

	public void insertAfterCurrent(String data) {
		Node temp = new Node(data, null, null);

		// no list
		if (top == null) {
			top = temp;
		} else {
			temp.setPrev(current);
			temp.setNext(current.getNext());
			current.setNext(temp);
			temp.getNext().setPrev(temp);
		}
		current = temp;
	}

	public void moveCurrentDown() {
		if (current.getNext() != null) {
			current = current.getNext();
		}
	}

	public void moveCurrentUp() {
		if (current.getPrev() != null) {
			current = current.getPrev();
		}
	}

	public void removeCurrent() {
		// no list
		if (top == null) {
		}

		// remove from the top
		else if (current == top) {
			current.getNext().setPrev(null);
			current = current.getNext();
			top = current;
		}

		else {
			current.getPrev().setNext(current.getNext());
			current.getNext().setPrev(current.getPrev());
			if(current.getNext() != null){
				current = current.getNext();
			}
			else if(current.getPrev() != null){
				current = current.getPrev();
			}
		}
	}

	public void display() {
		Node temp = top;
		int lineNumber = 0;

		while (temp != null) {
			if (temp == current) {
				System.out.println(lineNumber++ + ": " + ">" + temp.getData());
			} else {
				System.out.println(lineNumber++ + ": " + temp.getData());
			}
			temp = temp.getNext();
		}
	}

	public static void main(String[] args) {
		LinkedList list = new LinkedList();

		list.insertAfterCurrent("1");
		list.display();
		System.out.println("---------------");
		list.insertBeforeCurrent("2");
		list.display();
		System.out.println("---------------");
		list.insertBeforeCurrent("3");
		list.display();
		System.out.println("---------------");
		list.insertAfterCurrent("4");
		list.display();
		System.out.println("---------------");
		list.moveCurrentDown();
		list.display();
		System.out.println("---------------");
		list.moveCurrentDown();
		list.display();
		System.out.println("---------------");
		list.moveCurrentUp();
		list.display();
		System.out.println("---------------");
		list.moveCurrentUp();
		list.display();
		System.out.println("---------------");
		list.removeCurrent();
		list.display();
		System.out.println("---------------");
	}
}
